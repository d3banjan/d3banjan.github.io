---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import TagList from '../../components/TagList.astro';
import { getPublishedPosts, SERIES_META, SITE_TITLE } from '../../consts';

export function getStaticPaths() {
	return Object.entries(SERIES_META).map(([name, meta]) => ({
		params: { series: meta.slug },
		props: { seriesName: name, meta },
	}));
}

const { seriesName, meta } = Astro.props;

const SITE_URL = 'https://d3banjan.github.io';

const allPosts = await getPublishedPosts();
const posts = allPosts
	.filter((p) => p.data.series === seriesName)
	.sort((a, b) => (a.data.seriesOrder ?? 0) - (b.data.seriesOrder ?? 0));

const itemListJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'ItemList',
	name: seriesName,
	description: meta.description,
	url: `${SITE_URL}/series/${meta.slug}/`,
	numberOfItems: posts.length,
	itemListElement: posts.map((post, i) => ({
		'@type': 'ListItem',
		position: i + 1,
		url: `${SITE_URL}/blog/${post.id}/`,
		name: post.data.title,
	})),
};
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${seriesName} - ${SITE_TITLE}`} description={meta.description} />
		<script type="application/ld+json" set:html={JSON.stringify(itemListJsonLd)} />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 3em 1em;
			}
			h1 {
				margin-bottom: 0.3em;
			}
			.series-desc {
				color: rgb(var(--gray));
				margin-bottom: 2em;
			}
			.post-list {
				list-style: none;
				padding: 0;
				margin: 0;
				counter-reset: series-counter;
			}
			.post-list li {
				margin-bottom: 1.5em;
				padding-left: 2em;
				position: relative;
				counter-increment: series-counter;
			}
			.post-list li::before {
				content: counter(series-counter) ".";
				position: absolute;
				left: 0;
				font-weight: bold;
				color: var(--accent);
			}
			.post-list a {
				text-decoration: none;
				color: rgb(var(--black));
			}
			.post-list a:hover .post-title {
				color: var(--accent);
			}
			.post-title {
				font-size: 1.1em;
				font-weight: bold;
				margin: 0 0 0.2em 0;
			}
			.post-date {
				font-size: 0.9em;
				color: rgb(var(--gray));
				margin: 0 0 0.3em 0;
			}
			.post-desc {
				font-size: 0.9em;
				color: rgb(var(--gray));
				margin: 0 0 0.4em 0;
			}
			.back-link {
				display: inline-block;
				margin-bottom: 1em;
				color: var(--accent);
				text-decoration: none;
			}
			.back-link:hover {
				text-decoration: underline;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<a href="/series/" class="back-link">&larr; All series</a>
			<h1>{seriesName}</h1>
			<p class="series-desc">{meta.description}</p>
			{
				posts.length > 0 ? (
					<ol class="post-list">
						{posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<p class="post-title">{post.data.title}</p>
									<p class="post-date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
								<p class="post-desc">{post.data.description}</p>
								<TagList tags={post.data.tags} />
							</li>
						))}
					</ol>
				) : (
					<p>No posts in this series yet.</p>
				)
			}
		</main>
		<Footer />
	</body>
</html>
